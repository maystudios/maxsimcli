{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "paths": {
      "@maxsim/core": ["../cli/src/core/index.ts"]
    },
    "lib": [
      "esnext"
    ]
  },
  "include": [
    "src/server.ts",
    "src/terminal/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/main.tsx",
    "src/App.tsx",
    "src/components",
    "src/hooks"
  ]
}
