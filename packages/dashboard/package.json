{
  "name": "@maxsim/dashboard",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --import tsx server.ts",
    "build": "next build && npm run build:server",
    "build:server": "npx tsdown server.ts --format esm --out-dir .server-build --no-clean && node -e \"require('fs').cpSync('.server-build/server.mjs','server.js');require('fs').rmSync('.server-build',{recursive:true,force:true})\"",
    "build:standalone": "STANDALONE_BUILD=true next build && node -e \"const fs=require('fs');fs.cpSync('.next/static','.next/standalone/.next/static',{recursive:true});if(fs.existsSync('public'))fs.cpSync('public','.next/standalone/public',{recursive:true})\" && npx tsdown --config tsdown.config.server.ts && node -e \"require('fs').cpSync('.server-build/server.mjs','.next/standalone/server.js');require('fs').rmSync('.server-build',{recursive:true,force:true})\"",
    "start": "node server.js"
  },
  "dependencies": {
    "@codemirror/lang-markdown": "^6",
    "@codemirror/theme-one-dark": "^6",
    "@codemirror/view": "6",
    "@maxsim/core": "workspace:*",
    "@uiw/react-codemirror": "^4",
    "chokidar": "^4",
    "clsx": "^2",
    "detect-port": "^2",
    "motion": "^12",
    "next": "^15",
    "open": "^10",
    "react": "^19",
    "react-dom": "^19",
    "tailwind-merge": "^3",
    "ws": "^8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8",
    "postcss": "^8",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
