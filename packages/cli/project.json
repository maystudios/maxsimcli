{
  "name": "cli",
  "root": "packages/cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "implicitDependencies": ["templates", "hooks", "dashboard"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx tsdown",
          "node scripts/copy-assets.cjs"
        ],
        "parallel": false,
        "cwd": "packages/cli"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx vitest run --passWithNoTests",
        "cwd": "packages/cli"
      }
    }
  }
}
