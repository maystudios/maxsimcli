{
  "name": "core",
  "root": "packages/core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx tsdown",
        "cwd": "packages/core"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx vitest run --passWithNoTests",
        "cwd": "packages/core"
      }
    }
  }
}
